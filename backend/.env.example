# Configuración de Braintree para pagos
# Para obtener tus credenciales:
# 1. Crea una cuenta en https://www.braintreepayments.com/sandbox
# 2. Ve a Settings > API Keys en el Control Panel
# 3. Copia tus credenciales aquí

# Ambiente: sandbox para pruebas, production para producción
BRAINTREE_ENVIRONMENT=sandbox

# Credenciales Sandbox (reemplaza con las tuyas)
BRAINTREE_MERCHANT_ID=your_merchant_id_here
BRAINTREE_PUBLIC_KEY=your_public_key_here
BRAINTREE_PRIVATE_KEY=your_private_key_here

# Base de datos
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=
DB_NAME=pipidb

# Flask
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-secret-key-here

# Email (Flask-Mail)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# MongoDB (si aplica)
MONGODB_URI=mongodb://localhost:27017/
MONGODB_DB=pipidb
